<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme.NoToolbar">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BaseTheme" parent="Base.Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="main_block_element" parent="width_match_height_wrap">x
        <item name="android:layout_marginEnd">@dimen/main_section_end_margin</item>
        <item name="android:layout_marginStart">@dimen/main_section_start_margin</item>
    </style>

    <style name="width_match_height_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StandardPadding">
        <item name="android:padding">@dimen/margin_standart_half</item>
    </style>

    <style name="AboutActivityTheme" parent="BaseTheme.NoToolbar"/>

</resources>
