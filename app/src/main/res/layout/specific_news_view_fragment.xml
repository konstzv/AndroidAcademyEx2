<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/specific_news_view_fragment_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:scaleType="fitCenter"
                tools:ignore="ContentDescription"
                android:maxHeight="200dp"
                tools:src="@tools:sample/backgrounds/scenic" />

            <TextView
                android:id="@+id/specific_news_view_fragment_text_view_title"
                style="@style/StandardPadding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textSize="@dimen/big_text_size"
                tools:text="@tools:sample/lorem/random" />

            <TextView
                android:id="@+id/specific_news_view_fragment_text_view_date"
                style="@style/StandardPadding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                tools:text="@tools:sample/lorem/random" />

            <TextView
                android:id="@+id/specific_news_view_fragment_text_view_article"
                style="@style/StandardPadding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                tools:text="@tools:sample/lorem/random" />



            <TextView
                style="@style/StandardPadding"
                android:id="@+id/specific_news_view_fragment_text_view_article_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"

            />
        </LinearLayout>

    </ScrollView>
</LinearLayout>
