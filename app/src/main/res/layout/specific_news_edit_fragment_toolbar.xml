<?xml version="1.0" encoding="utf-8"?>
<Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"

    android:contentInsetEnd="@dimen/short_indent"
    android:contentInsetStart="@dimen/short_indent">


    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">



        <ImageButton
            android:id="@+id/specific_news_activity_edit_toolbar_image_cancel"
            android:layout_width="@dimen/toolbar_icon_size"
            android:layout_height="@dimen/toolbar_icon_size"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/about"
            android:src="@drawable/ic_cancel_white_24dp"
            android:tint="@android:color/black" />

        <ImageButton
            android:id="@+id/specific_news_activity_edit_toolbar_image_apply"
            android:layout_width="@dimen/toolbar_icon_size"
            android:layout_height="@dimen/toolbar_icon_size"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/about"
            android:src="@drawable/ic_done_white_24dp"
            android:tint="@android:color/black" />
    </RelativeLayout>
</Toolbar>